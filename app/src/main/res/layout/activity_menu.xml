<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".Menu.MenuActivity">

    <Button
        android:id="@+id/btnEjemplo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejemplo1" />

    <Button
        android:id="@+id/btnCine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vamos al Cine" />

    <Button
        android:id="@+id/btnEjemplo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vamos al Ejemplo2" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vamos a Numero Random" />

    <Button
        android:id="@+id/btnTraductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Traductor" />

</LinearLayout>